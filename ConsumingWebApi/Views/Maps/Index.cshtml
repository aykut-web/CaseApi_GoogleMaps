@model IEnumerable<ConsumingWebApi.Models.Data>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Simple Map</title>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <link rel="stylesheet" type="text/css" href="./style.css" />

    <style>
        #map {
            height: 100%;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>

    <script>

        let map;

        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: {
                    lat: 39.775371,
                    lng: 30.515957
                },
                zoom: 15,
            });

            // Ekip #44
            var markerEkip44 = new google.maps.Marker({
                position: {lat: 39.768669, lng: 30.507332},
                map: map,
            });

            var contentStringEkip44 =
                '<div id="content">' +
                '<div id="siteNotice">' +
                "</div>" +
                '<h1 id="firstHeading" class="firstHeading">Ekip #44</h1>' +
                '<div id="bodyContent">' +
                "<p><b>Mobile: </b> +90 5xx 11 11</p>" +
                "<p><b>Department: </b> Bakım & Onarım Müdürlüğü</p>" +
                "</div>" +
                "</div>";

            var infowindowEkip44 = new google.maps.InfoWindow({
                content: contentStringEkip44,
            });

            markerEkip44.addListener("rightclick", () => {
                infowindowEkip44.open({
                    anchor: markerEkip44,
                    map,
                    shouldFocus: false,
                });
            });

            // Ekip #21
            var markerEkip21 = new google.maps.Marker({
                position: { lat: 39.769669, lng: 30.507332 },
                map: map,
            });

            var contentStringEkip21 =
                '<div id="content">' +
                '<div id="siteNotice">' +
                "</div>" +
                '<h1 id="firstHeading" class="firstHeading">Ekip #21</h1>' +
                '<div id="bodyContent">' +
                "<p><b>Mobile: </b> +90 5xx 11 11</p>" +
                "<p><b>Department: </b> Bakım & Onarım Müdürlüğü</p>" +
                "</div>" +
                "</div>";

            var infowindowEkip21 = new google.maps.InfoWindow({
                content: contentStringEkip21,
            });

            markerEkip21.addListener("rightclick", () => {
                infowindowEkip21.open({
                    anchor: markerEkip21,
                    map,
                    shouldFocus: false,
                });
            });

        }









